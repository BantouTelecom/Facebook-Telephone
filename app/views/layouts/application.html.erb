  <%= yield(:head) %>

</head>
<body>
	
<div id="container">	
<div id="sidebar">
	<p><h2><%=image_tag 'spaz-icon-alpha.png', {:width=>"75"}%><br/>
	
	<%=link_to "Telephone", "/" %>
	</h2>
	<center>
	<%#link_to "Facebook App", "http://www.facebook.com/apps/application.php?id=104425026288823&v=page_getting_started", {:target=>"_parent"} %>
	<%=link_to "Terms", "terms" %> | <%=link_to "Policy", "policy" %></center>
	<%#link_to "App Home", "http://www.facebook.com/apps/application.php?id=104425026288823&v=page_getting_started", {:target=>"_parent"} %></p>
	<p><br/>
		Like Button
	</p>
	<p>
		Share Link
	</p>
</div>		

<div id="content">
	
	<div id="inline_invite" style="display: none">
	<div style="width: 450px">
	<%= link_to_close_redbox(raw('<img src="/images/close-btn.png" align="right" width="24" height="24" class="close-btn" border="0">'), html_options = {}) %>
	<center>
		<h1>Invitation</h1><br/>
		<%= %>
		<div id="generalform">
			<%= form_tag url_for(:controller => "facebook", :action => "invite"), :id => "tool-form", :remote => true do %>
			  <%= text_area_tag "message", "Check out the new Telephone on Facebook!  http://apps.facebook.com/telephone", {:cols => 40, :rows => 5} %><br />
			  <br />
			  <%= submit_tag "Send" %>
			<% end %>
		</div>
	</center>
	</div>
	</div>

	<div id="inline_phone" style="display: none">
	<div style="width: 450px">
	<%= link_to_close_redbox(raw('<img src="/images/close-btn.png" align="right" width="24" height="24" class="close-btn" border="0">'), html_options = {}) %>
	<center>
		<h1>Your Number</h1><br/>
		<div id="generalform">
			<%= form_tag url_for(:controller => "facebook", :action => "numberupdate"), :id => "number-form", :remote => true do %>
			  
			  <%= text_field_tag "phonenumber" %><br />
			  <br />
			  <%= submit_tag "Update" %>
			<% end %>
		</div>
	</center>
	</div>
	</div>
	

	<%= yield %>

</div>
</div>

