<html>
<head>
  <title>Facebook Telephone</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag 'redbox' %>
  <%= javascript_include_tag 'redbox' %>

	<script language="javascript" type="text/javascript">
